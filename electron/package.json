{
  "name": "remupro-v3",
  "version": "3.0.0",
  "description": "RemuPro - Distribucion BRP para establecimientos educacionales",
  "main": "main.js",
  "author": "RemuPro",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.3.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.remupro.v3",
    "productName": "RemuPro",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png",
      "icon.ico"
    ],
    "extraResources": [
      {
        "from": "../.venv",
        "to": ".venv",
        "filter": ["**/*"]
      },
      {
        "from": "../api",
        "to": "api",
        "filter": ["**/*.py"]
      },
      {
        "from": "../processors",
        "to": "processors",
        "filter": ["**/*.py"]
      },
      {
        "from": "../config",
        "to": "config",
        "filter": ["**/*"]
      },
      {
        "from": "../database",
        "to": "database",
        "filter": ["**/*.py"]
      },
      {
        "from": "../reports",
        "to": "reports",
        "filter": ["**/*.py", "**/*.docx"]
      },
      {
        "from": "../dashboard/out",
        "to": "dashboard/out",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RemuPro"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "leftra123",
        "repo": "remupro_v3"
      }
    ]
  }
}
